# Choy AI Brain Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== ENVIRONMENT =====
ENVIRONMENT=development
DEBUG=true

# ===== TELEGRAM CONFIGURATION =====
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# For production deployment with webhooks
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_USE_POLLING=true

# ===== AI PROVIDER API KEYS =====

# DeepSeek (Primary - REQUIRED)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4000
DEEPSEEK_TEMPERATURE=0.7

# OpenAI/ChatGPT (Optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7

# xAI Grok (Optional)
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-beta
XAI_MAX_TOKENS=4000
XAI_TEMPERATURE=0.7

# Google Gemini (Optional)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=4000
GEMINI_TEMPERATURE=0.7
DEEPSEEK_TEMPERATURE=0.7

# Default AI settings
DEFAULT_PERSONA=choy
MAX_CONVERSATION_HISTORY=50
MAX_RESPONSE_LENGTH=2000
RESPONSE_TIMEOUT=30.0

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_MAX_SIZE=52428800
LOG_BACKUP_COUNT=5

# ===== MEMORY CONFIGURATION =====
MEMORY_RETENTION_DAYS=365
MAX_MEMORIES_PER_USER=1000
ENABLE_SEMANTIC_SEARCH=true

# ===== SECURITY =====
SECRET_KEY=change-this-to-a-random-secret-key-in-production
RATE_LIMIT_PER_MINUTE=20

# Optional: Restrict access to specific users (comma-separated user IDs)
# ALLOWED_USERS=123456789,987654321

# Optional: Admin users (comma-separated user IDs)
# ADMIN_USERS=123456789

# ===== PERFORMANCE =====
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL=300

# ===== FUTURE INTEGRATIONS =====
# Uncomment and configure when needed

# Google Workspace
# GOOGLE_CREDENTIALS_FILE=/path/to/credentials.json

# Meta/Facebook
# META_APP_ID=your_meta_app_id
# META_APP_SECRET=your_meta_app_secret

# Notion
# NOTION_TOKEN=your_notion_integration_token

# ClickUp
# CLICKUP_TOKEN=your_clickup_api_token

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=60

# ===== AVAILABLE PERSONAS =====
# Comma-separated list of available personas
AVAILABLE_PERSONAS=choy,stark,rose,sherlock,joker,hermione,harley
